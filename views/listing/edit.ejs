<% layout("./layouts/boilerplate.ejs")%>

<div class="row">
  <div class="col-8 offset-2">
    <form
      action="/listings/<%=listing._id %>?_method=put"
      method="post"
      class="mt-3 needs-validation"
      enctype="multipart/form-data"
      novalidate
    >
      <h2 class="mb-3">Edit listing:</h2>

      <div class="mb-3">
        <label for="title">Title:</label>
        <input
          type="text"
          name="listing[title]"
          value="<%= listing.title %>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter the Title:</div>
      </div>

      <div class="mb-3">
        <label for="title">Description:</label>
        <textarea
          name="listing[description]"
          id="description"
          class="form-control"
          required
        >
      <%=listing.description%></textarea
        >
        <div class="invalid-feedback">Please enter description</div>
      </div>

      <div class="mb-3">
        Original Image:
        <br />
        <img src="<%= newImageUrl %>" alt="listing.image" />
      </div>

      <div class="mb-3">
        <label for="image">Upload image:</label>

        <input type="file" name="listing[image][url]" class="form-control" />

        <div class="invalid-feedback">Please enter image url and filename</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price">Price:</label>
          <input
            name="listing[price]"
            value="<%= listing.price%>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid pricing</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country">Country:</label>
          <input
            type="text"
            name="listing[country]"
            value="<%= listing.country %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid country name</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location">location:</label>
        <input
          type="text"
          name="listing[location]"
          value="<%= listing.location %>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter a valid location</div>
      </div>

      <button class="btn edit-btn">Update</button>
    </form>
  </div>
</div>

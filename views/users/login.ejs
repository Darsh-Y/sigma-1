<% layout("./layouts/boilerplate.ejs")%>

<div class="row">
  <h3 class="mb-3 mt-3 col-6 offset-3">Login for Wanderlust</h3>
  <div class="col-6 offset-3">
    <form
      action="/login"
      method="post"
      class="mb-3 needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="username" class="form-label">Username:</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
        <div class="valid-feedback">username looks good</div>
        <!-- <div class="invalid-feedback">Plese enter a Title</div> -->
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password:</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
        <div class="valid-feedback">password looks good</div>
        <div class="invalid-feedback">Incorrect password</div>
      </div>
      <button class="btn btn-dark">Login</button>
    </form>
  </div>
</div>
